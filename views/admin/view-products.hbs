<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-secondary ml-auto ">Add product</a>
        </div>
        <div class="row">
            <div class="col-12">
                <!-- First Table with Dark Header -->
                <br>
                <table class="table mt-4" id="admintable1">
                    <thead class="thead">
                        <tr>
                            <th scope="col">no</th>
                            <th scope="col">Device name</th>
                            <th scope="col">Processor</th>
                            <th scope="col">category</th>
                            <th scope="col">price</th>
                            <th scope="col">Image</th>
                            <th scope="col">options</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td scope="row">{{this.index}}</td>
                            <td>{{this.deviceName}}</td>
                            <td>{{this.deviceDescription}}</td>
                              <td>{{this.deviceCategory}}</td>
                            <td>â‚¹{{this.devicePrice}}</td>
                            <td><img src="/product-images/{{this._id}}.jpg" width="90px" height="100px"></td>
                             <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.mobileName}}')">Delete</a></td>
                        </tr>
                              {{/each}}
                    </tbody>
                  
                </table>
    </div>
</section>


<script>
    $(document).ready( function () {
    $('#admintable1').DataTable();
} );
</script>
