
    <section class="container mt-5">
        <h2 class="mb-4">Add Device</h2>
        <form action="/admin/add-product" method="post" enctype="multipart/form-data">
            <!-- Mobile Name -->
            <div class="form-group">
                <label for="deviceName">Device Name:</label>
                <input type="text" class="form-control" id="deviceName" name="deviceName" required>
            </div>

            <!-- Mobile Description -->
            <div class="form-group">
                <label for="deviceDescription">Device Description:</label>
                <input class="form-control" id="deviceDescription" name="deviceDescription" required>
            </div>

             <div class="form-group">
      <label for="deviceCategory">Device Category:</label>
        <select id="deviceCategory" name="deviceCategory" required>
        <option value="" selected>--select the category--</option>Â 
        <option value="smartphone">Smartphone</option>
        <option value="laptop">Laptop</option>
        <option value="wearable">Wearable</option>
        <option value="speaker">Speaker</option>
        <option value="other">Others</option>
         </select>
           </div>   

            <!-- Mobile Price -->
            <div class="form-group">
                <label for="devicePrice"> Price:</label>
                <input type="number" class="form-control" id="devicePrice" name="devicePrice" step="0.01" required>
            </div>

            <!-- Image Upload -->
            <div class="form-group">
                <label for="imageUpload">Upload Image:</label>
                <input type="file" class="form-control-file" id="imageUpload" name="image" accept="image/*"  >
            
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-secondary">Add Device</button>
        </form>
 
