          <div class="card-body p-4">

            <div class="float-end">
              <p class="mb-0 me-5 d-flex align-items-center">
                <span class="small text-muted me-2">Order total:</span> <span id="total2"
                  class="lead fw-normal">₹{{total}}</span>
              </p>
            </div>

          </div>
        </div>

        <div class="d-flex justify-content-end">
          <a type="button" class="btn btn-light btn-lg me-2" href="/">Continue shopping</a>
          <a href="/place-order" class="btn btn-secondary btn-lg">Place Order</a>
        </div>

      </div>
    </div>
  </div>
</section>
